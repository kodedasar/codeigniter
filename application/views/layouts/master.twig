<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">

    {% block head %}

        {{ include('layouts/partials/style.twig') }}

        <title>{% block title %}{% endblock %} - HMVC</title>

    {% endblock %}

</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        
        <!-- Contains the header and navigation -->
        {{ include('layouts/partials/header.twig') }}

        <!-- Left side column. contains the sidebar -->
        {{ include('layouts/partials/sidebar.twig') }}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content-header">
                {% block header %}{% endblock %}
            </section>

            <section class="content">
                {% block content %}{% endblock %}
            </section>

        </div>

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                Page rendered in <strong>{elapsed_time}</strong> seconds.
            </div>
            Made with Love
        </footer>

        <!-- Control Sidebar -->
        {{ include('layouts/partials/control.twig') }}

        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->

    {{ include('layouts/partials/script.twig') }}
    
</body>

</html>