{% extends "layouts/base.twig" %}

{% block title %}
	Reset Password
{% endblock %}

{% block content %}
	<div class="login-box">
		<div class="login-logo">
			<a href="{{ base_url() }}">
				{{ getenv('CI_NAME') }}
			</a>
		</div>

		<div class="login-box-body">
			<p class="login-box-msg">{{ lang('change_password_heading') }}</p>

			{{ form_open('auth/reset_password' . code) }}

			<div class="form-group has-feedback">
				{{ form_input(new_password) }}
				<span class="glyphicon glyphicon-lock form-control-feedback"></span>
			</div>

			<div class="form-group has-feedback">
				{{ form_input(new_password_confirm) }}
				<span class="glyphicon glyphicon-lock form-control-feedback"></span>
			</div>

			<div class="text-danger">
				{{ message|raw }}
			</div>

			{{ form_input(user_id) }}

			{{ form_hidden(csrf) }}

			{{ form_submit('submit', lang('reset_password_submit_btn'), 'class="btn btn-primary btn-block btn-flat"') }}

			{{ form_close() }}

		</div>

	</div>
{% endblock %}
